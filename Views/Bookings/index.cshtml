@model IEnumerable<AutoFix.Models.Booking>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <br>
<h1>Dina aktiva bokningar</h1><br>


@if (!Model.Any())
{
    <td>Du har inga aktiva bokningar för tillfället!</td>
    <p>
    <a asp-action="Create">Boka tjänst!</a>
</p>
}
else
{
        <div class="row border-dark border-top-two theader-text pb-2">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Car)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Service)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Date)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.OtherRequests)
        </div>
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.Address)
        </div>

    </div>
@foreach (var item in Model)
{
    <div class="row pt-2 border-dark">
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.Car)
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.Service)
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.Date)
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.OtherRequests)
        </div>
        <div class="col-md-3">
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe width="260" height="199" id="gmap_canvas" src="https://maps.google.com/maps?q=@item.Address&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="yes" marginheight="0" marginwidth="0"></iframe>
                </div>
            </div>
        </div>
        <div class="col-md-1 test">
            <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Avboka</a>
        </div>
    </div>
}

